{
  "name": "@twilio-alpha/mcp",
  "version": "0.0.1",
  "description": "This is a Model Context Protocol server that exposes all of Twilio APIs.",
  "license": "ISC",
  "author": "Twilio",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "twilio-mcp-server": "./build/index.js"
  },
  "files": [
    "build",
    "twilio-oai/spec"
  ],
  "scripts": {
    "prebuild": "rm -rf build/",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "prepare": "[ -d twilio-oai ] && (cd twilio-oai && git pull) || git clone https://github.com/twilio/twilio-oai",
    "start": "node build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@twilio-alpha/openapi-mcp-server": "*",
    "@apidevtools/swagger-parser": "^10.1.1",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "inquirer": "^12.5.0",
    "keytar": "^7.9.0",
    "minimist": "^1.2.8",
    "openapi-types": "^12.1.3"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^3.2.0",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "^5",
    "vitest": "^3.0.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
