{
  "name": "@twilio-alpha/mcp-monorepo",
  "version": "0.0.0",
  "description": "Model Context Protocol monorepo",
  "license": "ISC",
  "author": "Twilio",
  "type": "module",
  "workspaces": [
    "packages/openapi-mcp-server",
    "packages/mcp"
  ],
  "bin": {
    "twilio-mcp-server": "./packages/mcp/build/index.js"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "prepare": "npm run prepare --workspaces && husky && cd packages/openapi-mcp-server && npm run build",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "test:watch": "npm run test:watch --workspaces"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:fix"
    ],
    "tests/**/*.ts": [
      "npm run lint:fix"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0"
  }
}
